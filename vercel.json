{
  "version": 2,
  "builds": [
    {
      "src": "pages/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/save",
      "dest": "/api/save.js"
    },
    {
      "src": "/(.*)",
      "dest": "/pages/$1.html"
    }
  ],
}
